<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_search_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_top_height"
        android:layout_alignParentTop="true"
        android:background="@color/search_primary_color" >

        <EditText
            android:id="@+id/et_search_top"
            style="@style/MySearchEditText.Search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/search_top_content_margin"
            android:layout_marginRight="@dimen/search_top_content_margin" />
    </RelativeLayout>

    <View
        android:id="@+id/shadow_search_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:layout_below="@id/layout_search_top"
        android:layout_marginBottom="@dimen/common_margin"
        android:background="@drawable/shadow_pattern" />

    <RelativeLayout
        android:id="@+id/layout_search_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shadow_search_top"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin">

    </RelativeLayout>

</RelativeLayout>