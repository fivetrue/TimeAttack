<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recentry_item_height"
    android:background="@color/drawer_item_background_n" >

    <RelativeLayout
        android:id="@+id/layout_recently_item_image"
        android:layout_width="@dimen/recentry_item_image_size"
        android:layout_height="@dimen/recentry_item_image_size"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/recentry_item_margin" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/list_bg"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iv_recently_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/iv_recently_item_arrow"
        android:layout_width="@dimen/recentry_item_arrow_size"
        android:layout_height="@dimen/recentry_item_arrow_size"
        android:layout_marginRight="@dimen/recentry_item_margin" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_d"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recentry_item_text_margin"
        android:layout_marginRight="@dimen/recentry_item_margin"
        android:layout_toRightOf="@id/layout_recently_item_image"
        android:layout_toLeftOf="@id/iv_recently_item_arrow"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_recently_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="@dimen/recentry_item_title_size"
            android:singleLine="true"
            style="@style/DrawerText" />
        
        <TextView
            android:id="@+id/tv_recently_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/drawer_text_color_p"
            android:typeface="sans"
            android:textSize="@dimen/recentry_item_description_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/recentry_item_margin"
        android:layout_marginRight="@dimen/recentry_item_margin"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white" />

</RelativeLayout>