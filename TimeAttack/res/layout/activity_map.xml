<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/fragment_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:id="@+id/layout_map_my_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/map_control_margin_top"
        android:layout_marginRight="@dimen/map_control_margin_right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_map_place"
            android:layout_width="@dimen/map_control_size"
            android:layout_height="@dimen/map_control_size"
            android:src="@drawable/ic_action_place"
            style="@style/AlphaWhiteButton.MapIcon"
             />
        
         <ImageView
              android:id="@+id/iv_map_direction"
            android:layout_width="@dimen/map_control_size"
            android:layout_height="@dimen/map_control_size"
            android:src="@drawable/ic_action_directions"
            android:layout_marginTop="@dimen/map_control_margin_right"
            style="@style/AlphaWhiteButton.MapIcon"
             />
    </LinearLayout>

</RelativeLayout>