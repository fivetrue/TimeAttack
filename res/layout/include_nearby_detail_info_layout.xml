<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_item_location_searching"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/layout_nearby_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_item_padding"
        android:layout_marginRight="@dimen/common_item_padding"
        android:layout_marginTop="@dimen/common_item_padding"
        android:orientation="vertical"
        android:padding="@dimen/common_item_padding" >

        <TextView
            android:id="@+id/tv_nearby_detail_info_title"
            style="@style/listTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
			android:text="@string/detail_info"/>
        
        <TextView
            android:id="@+id/tv_nearby_detail_info_phone_number"
            style="@style/listDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description" />

        <TextView
            android:id="@+id/tv_nearby_detail_info_google_plus_url"
            style="@style/listDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description" />
    </LinearLayout>

