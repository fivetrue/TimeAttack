<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TimeAttackBaseTheme" parent="AppTheme">

        <!-- ActionBar Custom -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- ActionBar Custom -->
    </style>

    <!-- Fivetrue Custom ActionBar -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/actionBarTitleText</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:subtitleTextStyle">@style/actionBarSubTitleText</item>
        <item name="android:itemPadding">0dp</item>
    </style>

    <style name="MyActionBarButton">
        <item name="android:background">@drawable/selector_common_alpha_raleway_yellow</item>
        <item name="android:scaleType">center</item>
    </style>
    <!-- Fivetrue Custom ActionBar -->


    <!-- Drawer Item Style -->
    <style name="DrawerText">
        <item name="android:textSize">@dimen/drawer_item_text_size</item>
        <item name="android:textColor">@color/selector_drawer_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/drawer_item_text_padding</item>
        <item name="android:paddingRight">@dimen/drawer_item_text_padding</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="baseListTextProperties">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <!-- ListStyle -->
     <style name="MyBaseList" >
        <item name="android:listSelector">@android:color/white</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:dividerHeight">-1dp</item>
    </style>

    <!-- TextStyles -->
    <style name="actionBarTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <style name="actionBarSubTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/actionbar_sub_title_text_size</item>
        <item name="android:textColor">@color/actionbar_sub_title</item>
    </style>

    <style name="listTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textColor">@color/selector_list_title_text_color</item>
    </style>

    <style name="listSubTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/list_item_sub_title_text_size</item>
        <item name="android:textColor">@color/selector_list_sub_title_text_color</item>
    </style>

    <style name="listDescriptionText">
        <item name="android:textSize">@dimen/list_item_description_text_size</item>
        <item name="android:textColor">@color/list_sub_title_text_color_n</item>
        <item name="android:padding">@dimen/recentry_item_body_padding</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TabTitleText">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/selector_drawer_text_color</item>
        <item name="android:background">@drawable/selector_drawer_layout</item>
    </style>

    <style name="EmptyText">
        <item name="android:textSize">@dimen/empty_text_size</item>
        <item name="android:textColor">@color/muli_brown</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    
    <style name="baseEditTextProperties" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="MySearchEditText" parent="baseEditTextProperties">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:hint">@string/location_search</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:background">@drawable/input_bg_n</item>
    </style>
    
    <style name="MySearchEditText.Search" parent="MySearchEditText">
        <item name="android:drawableLeft">@drawable/ic_action_location_searching</item>
        <item name="android:drawablePadding">@dimen/edit_text_padding</item>
    </style>

</resources>