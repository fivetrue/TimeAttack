<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TimeAttackBaseTheme" parent="AppTheme">

        <!-- ActionBar Custom -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- ActionBar Custom -->
    </style>

    <!-- Fivetrue Custom ActionBar -->
    <style name="MyActionBar" >
        <item name="android:background">@color/main_primary_color</item>
    </style>

    <style name="MyActionBarButton">
        <!-- <item name="android:background">@drawable/selector_main_primary_color</item> -->
        <item name="android:scaleType">center</item>
    </style>
    <!-- Fivetrue Custom ActionBar -->


    <!-- Drawer Item Style -->

    <style name="baseListTextProperties">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <!-- ListStyle -->
    <style name="MyBaseList">
        <item name="android:listSelector">@android:color/white</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:dividerHeight">-1dp</item>
    </style>

    <!-- TextStyles -->
     <style name="DrawerText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/drawer_item_text_size</item>
<!--         <item name="android:textColor">@color/selector_drawer_text_color</item> -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/drawer_item_text_padding</item>
        <item name="android:paddingRight">@dimen/drawer_item_text_padding</item>
        <!-- <item name="android:typeface">sans</item> -->
    </style>
    
    <style name="actionBarTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
          <item name="android:gravity">center</item>
    </style>

    <style name="actionBarSubTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/actionbar_sub_title_text_size</item>
          <item name="android:gravity">center</item>
    </style>

    <style name="dismissTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/actionbar_sub_title_text_size</item>
        <item name="android:textColor">@color/actionbar_sub_title</item>
    </style>

    <style name="listHeaderText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/common_item_header_text_size</item>
        <item name="android:padding">@dimen/common_item_padding</item>
    </style>
    
    <style name="listTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textColor">@color/selector_list_title_text_color</item>
    </style>

    <style name="listSubTitleText" parent="baseListTextProperties">
        <item name="android:textSize">@dimen/list_item_sub_title_text_size</item>
        <item name="android:textColor">@color/selector_list_sub_title_text_color</item>
    </style>

    <style name="listDescriptionText">
        <item name="android:textSize">@dimen/list_item_description_text_size</item>
        <item name="android:textColor">@color/list_sub_title_text_color_n</item>
        <item name="android:padding">@dimen/common_item_padding</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TabTitleText">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/selector_drawer_text_color</item>
        <item name="android:background">@drawable/selector_drawer_layout</item>
    </style>

    <style name="EmptyText">
        <item name="android:textSize">@dimen/empty_text_size</item>
        <item name="android:textColor">@color/main_accent_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="baseEditTextProperties" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MySearchEditText" parent="baseEditTextProperties">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:hint">@string/location_search</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:background">@android:drawable/editbox_background</item>
    </style>

    <style name="MySearchEditText.Search" parent="MySearchEditText">
        <item name="android:drawableLeft">@drawable/ic_action_location_searching</item>
        <item name="android:drawablePadding">@dimen/edit_text_padding</item>
    </style>

    <!-- Dialog Style -->
    <style name="MyDialog">
        <item name="android:typeface">sans</item>
        <item name="android:paddingLeft">@dimen/dialog_text_padding</item>
        <item name="android:paddingRight">@dimen/dialog_text_padding</item>
    </style>

    <style name="MyDialog.Text" parent="MyDialog">
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyDialog.TitleText" parent="MyDialog.Text">
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:textColor">@color/dialog_text_color</item>
        <item name="android:background">@color/dialog_title_background</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="MyDialog.ContentText" parent="MyDialog">
        <item name="android:textSize">@dimen/dialog_content_text_size</item>
        <item name="android:textColor">@color/dialog_content_text_color</item>
        <item name="android:background">@color/dialog_content_background</item>
        <item name="android:paddingTop">@dimen/dialog_text_padding</item>
        <item name="android:paddingBottom">@dimen/dialog_text_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyDialog.Button" parent="MyDialog.Text">
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textColor">@color/selector_dialog_button_text</item>
        <item name="android:background">@drawable/selector_dialog_button</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyDialog.MenuText" parent="MyDialog.Text">
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textColor">@color/selector_dialog_menu_text</item>
        <item name="android:background">@drawable/selector_dialog_content_menu</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Alpha White Button -->
    <style name="AlphaWhiteButton">
        <item name="android:background">@drawable/alpha_white_background</item>
    </style>

    <style name="AlphaWhiteButton.MapIcon" parent="AlphaWhiteButton">
        <item name="android:scaleType">center</item>
    </style>

</resources>